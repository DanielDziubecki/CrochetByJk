<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='http://fonts.googleapis.com/css?family=Prompt&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
    <link rel="icon" href="~/Content/Img/crochetIcon.png">
    <title>Crochet by JK</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div id="currentAction" style="display: none">
    @Html.Raw(ViewContext.RouteData.Values["action"].ToString().ToLower())
</div>
<a href="@Url.Content("~/")" id="banerLink">
    <div id="baner"></div>
</a>
<div id="navbar"></div>
@RenderBody()
<div id="footer"></div>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/react")

<script src="~/Content/ReactComponents/Navbar.jsx"></script>
<script src="~/Content/ReactComponents/Footer.jsx"></script>
<script src="~/Content/ReactComponents/Baner.jsx"></script>
<script src="~/Scripts/aos/aos.js"></script>
@RenderSection("scripts", required: false)
</body>
</html>
<script>
    $(document).ready(function() {

            var actionName = $('#currentAction').text();
            var menuItems = $("li a");
            for (var i = 0; i < menuItems.length; i++) {
                var menuItem = menuItems[i];
                if (menuItem.id.trim() === actionName.trim()) {
                    $(menuItem).addClass("selected-menu-item");
                    $(menuItem).unbind('mouseenter mouseleave');
                }
            }
